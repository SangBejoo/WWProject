<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/double_grid_material_design_16dp"
        android:layout_marginStart="@dimen/double_grid_material_design_16dp"
        android:layout_marginTop="@dimen/small_grid_material_design_4dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_h6_material_design_20sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_body_material_design_14sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintStart_toStartOf="@+id/name_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_textview" />

    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_body_material_design_14sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintStart_toStartOf="@+id/info_textview"
        app:layout_constraintTop_toBottomOf="@+id/info_textview" />

    <TextView
        android:id="@+id/quantity_textview"
        android:layout_marginTop="@dimen/small_grid_material_design_4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/double_grid_material_design_16dp"
        android:layout_marginRight="@dimen/double_grid_material_design_16dp"
        android:background="@drawable/rounded_corner"
        android:paddingEnd="@dimen/small_grid_material_design_4dp"
        android:paddingStart="@dimen/small_grid_material_design_4dp"
        android:textSize="@dimen/font_subtitle_18sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/small_grid_material_design_4dp"
        android:textSize="@dimen/font_body_material_design_14sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="@+id/quantity_textview"
        android:paddingRight="@dimen/small_grid_material_design_4dp"
        app:layout_constraintTop_toBottomOf="@+id/quantity_textview"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/button"
        android:text="@string/quick_sell"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/quadruple_grid_material_design_32dp"
        android:padding="0dp"
        android:textSize="@dimen/font_body_material_design_14sp"
        app:fontFamily="@font/source_sans_pro"
        app:layout_constraintEnd_toEndOf="@+id/price_textview"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/price_textview" />

</android.support.constraint.ConstraintLayout>