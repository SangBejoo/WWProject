<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="stats_text_linear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/small_grid_material_design_4dp</item>
        <item name="android:paddingBottom">@dimen/small_grid_material_design_4dp</item>
    </style>

    <style name="stats_text_title">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">@dimen/stat_title_180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_subtitle_18sp</item>
    </style>

    <style name="stats_text_numbers">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">@dimen/stat_number_150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_subtitle_18sp</item>
    </style>

    <style name="editor_linear_line">
        <item name="android:paddingLeft">@dimen/large_padding_60dp</item>
        <item name="android:paddingRight">@dimen/large_padding_60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editor_view">
        <item name="android:layout_width">@dimen/large_padding_60dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>
